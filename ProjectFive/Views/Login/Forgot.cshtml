@{
    ViewData["Title"] = "Forgot";
}

<head>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="/css/login.css" rel="stylesheet">
    
</head>

<body>

    <div class="wrapper">
        <form method="post" asp-action="SendCode">
            <h1>I Need A Code</h1>
            <div class="input-box">
                <input type="text" placeholder="Email" name="email" required />
                <i class='bx bxs-user'></i>
            </div>

            <input class="btn" type="submit" value="Send Code" />
 
            <div class="register-link">
                <p>Don't have an account? <a asp-controller="Login" asp-action="Register">Register</a></p>
            </div>
            <div class="register-link">
                <p> <a asp-controller="Login" asp-action="Login">Back to Login</a></p>
            </div>
        </form>
    </div>

    <br /><br />
    <div class="wrapper">
        <form method="post" asp-action="ForgotPassword">
            <h1>I Have A Code</h1>
            <div class="input-box">
                <input type="text" placeholder="Email" name="email" required />
                <i class='bx bxs-user'></i>
            </div>
            <div class="input-box">
                <input type="text" placeholder="Code" name="code" required />
            </div>
            <div class="input-box">
                <input type="password" placeholder="New Password" name="password" required />
                <i class='bx bxs-lock-alt'></i>
            </div>
            <input class="btn" type="submit" value="Continue" />
        </form>
    </div>
</body>
